<h1>新建宿舍小讲堂</h1>

<%= form_for :lecture ,url: lectures_path do |f| %>
  <p>
    <%= f.label :题目 %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :开始时间 %><br>
    <%= datetime_local_field(:start_time, :graduation_day) %>
  </p>

  <p>
    <%= f.label :结束时间 %><br>
    <%= datetime_local_field(:end_time, :graduation_day) %>
  </p>

  <p>
    <%= f.label :类别 %><br>
    <%= select_tag(:category , options_for_select([['技术'], ['科普'] ]) ) %>
  </p>
 
   <p>
    <%= f.label :内容 %><br>
    <%= f.text_field :content %>
  </p>

   <p>
    <%= f.label :所在房间 %><br>
    <%= f.text_field :suite %>
  </p>

  <p>
    <%= f.submit "保存" %>
  </p>
<% end %>