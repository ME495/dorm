<%= render "welcome/nav" %>

<div class="container">
  <div class="row">
    <table class="table table-striped">
      <caption><h1>宿舍小讲堂</h1></caption>
      <thead>
      <tr>
        <th>标题</th>
        <th>类别</th>
        <th>发布人</th>
        <th>开始时间</th>
        <th>结束时间</th>
      </tr>
      </thead>
      <tbody>
      <% @lectures.each do |lecture| %>
        <tr>
          <td><%= lecture.title %></td>
          <td><%= lecture.category %></td>
          <td><%= lecture.student.name %></td>
          <td><%= lecture.start_time %></td>
          <td><%= lecture.end_time %></td>
          <td><%= link_to '查看详情', lecture_path(lecture) %></td>
        </tr>
      <% end %>
      </tbody>
    </table>


    <div class="flickr_pagination">
      <%= will_paginate @lectures, :container => false %>
      <div class="page_info">
        <%= page_entries_info @lectures %>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#lectures").addClass("active");
    });
</script>