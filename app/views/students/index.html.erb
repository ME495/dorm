<h1>学生管理页面</h1><%= link_to '新建学生',new_student_path %>
<table>
  <tr>
    <th>学号</th>
    <th>姓名</th>
    <th>房间号</th>
    <th colspan="3"></th>
  </tr>
 
  <% @students.each do |student| %>
    <tr>
      <td><%= student.student_number %></td>
      <td><%= student.student_name %></td>
      <td><%= student.department %></td>
      <td><%= link_to '显示具体信息', student_path(student) %></td>
      <td><%= link_to '编排这个学生', edit_student_path(student) %></td>
      <td><%= link_to 'Destroy', student_path(student),
              method: :delete,
              data: { confirm: '确定要删除这条学生信息?' } %></td>
	
    </tr>
  <% end %>
</table>
